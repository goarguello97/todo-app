generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid()) @db.Char(36)
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    Task      Task[]
}

model Task {
    id     String  @id @default(uuid()) @db.Char(36)
    task   String
    done   Boolean @default(false)
    user   User    @relation(fields: [userId], references: [id])
    userId String
}
